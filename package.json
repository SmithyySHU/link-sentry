{
  "name": "scanlark",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:crawler": "npm run -w @scanlark/crawler dev",
    "dev:db": "npm run -w @scanlark/db dev",
    "dev:api": "npm run -w @scanlark/api dev",
    "dev:worker": "npm run -w @scanlark/worker dev",
    "dev:web": "npm run -w @scanlark/web dev",
    "demo:latest-scan": "npm run -w @scanlark/db demo:latest-scan",
    "demo:site-history": "npm run -w @scanlark/db demo:site-history --",
    "scan:once": "npm run -w @scanlark/crawler scan:once --",
    "typecheck": "tsc -p packages/crawler && tsc -p packages/db",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "pg": "^8.16.3",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "express": "^4.21.2"
  }
}
