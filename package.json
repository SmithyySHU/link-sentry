{
  "name": "link-sentry",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:crawler": "npm run -w @link-sentry/crawler dev",
    "dev:db": "npm run -w @link-sentry/db dev",
    "scan:once": "npm run -w @link-sentry/crawler scan:once --",
    "demo:site-history": "npm run -w @link-sentry/db demo:site-history",
    "typecheck": "tsc -p packages/crawler && tsc -p packages/db"
    
  },
  "devDependencies": {
    "tsx": "^4.20.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "pg": "^8.16.3"
  }
}
